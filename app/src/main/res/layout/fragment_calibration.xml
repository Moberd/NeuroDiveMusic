<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.calibrate.CalibrationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/indent.xs">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:indicatorColor="@color/primary"
            android:background="@color/text_secondary"/>

        <TextView
            android:id="@+id/calibrationText"
            style="@style/TypographyHeading"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/indent.xxs"
            android:text="@string/calibration.text.calibration_status"
            android:textAlignment="center" />
    </LinearLayout>

</FrameLayout>